import java.util.Scanner;

class Solution {
    
    public static void main(String[] args) {
        // Write your code here
        Scanner sc  = new Scanner(System.in);
        int n  = sc.nextInt();
        int i =1;
        while(i<=n){
            
            int j = 1;
            while(j<=i-1){
                
                System.out.print(" ");
                j++;
            }
            j =1;
            while(j<=n){
                System.out.print("*");
                j++;
            }
            System.out.print(" ");
            i++;
            
        }
	}
}
